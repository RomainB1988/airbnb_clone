<h1>Edit Flat</h1>

<%= form_with model: @flat, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price_per_night %>
  <%= f.number_field :price_per_night %>

  <%= f.submit "Update Flat" %>
<% end %>

