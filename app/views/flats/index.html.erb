<!-- app/views/flats/index.html.erb -->
<h1 class="text-center mb-5">Liste des Appartements</h1>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <%= image_tag(flat.image_url.presence || 'https://via.placeholder.com/300x200', class: "card-img-top", alt: flat.name) %>
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.description.truncate(80) %></p>
            <p class="card-text"><strong>Prix :</strong> <%= flat.price_per_night %> € / nuit</p>
          </div>
          <div class="card-footer text-center">
            <%= link_to "Voir", flat_path(flat), class: "btn btn-primary btn-sm mx-1" %>
            <%= link_to "Editer", edit_flat_path(flat), class: "btn btn-secondary btn-sm mx-1" %>
            <%= link_to "Supprimer", flat_path(flat), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer ce logement ?" }, class: "btn btn-danger btn-sm mx-1" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
