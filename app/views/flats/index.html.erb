<h1>All Flats</h1>

<% @flats.each do |flat| %>
  <div>
    <h2><%= link_to flat.name, flat_path(flat) %></h2>
    <p><%= flat.description %></p>
    <p>Price: <%= flat.price %> €</p>
  </div>
<% end %>



